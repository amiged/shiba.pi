	SIGNAL clk : std_logic;
	SIGNAL rst_n : std_logic;
	SIGNAL cmd_reg : std_logic_vector (8 DOWNTO 0);
	SIGNAL data_reg : std_logic_vector (31 DOWNTO 0);
