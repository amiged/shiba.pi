		END;

	BEGIN
		CLOCK_LOOP : LOOP
		clk <= transport '0';
		WAIT FOR 5 us;
		TX_TIME := TX_TIME + 5;
		clk <= transport '1';
		WAIT FOR 5 us;
		TX_TIME := TX_TIME + 5;
		ANNOTATE_CFG_D(TX_TIME);
		ANNOTATE_CFG_CCLK(TX_TIME);
		ANNOTATE_CFG_PROG_B0(TX_TIME);
		ANNOTATE_CFG_PROG_B1(TX_TIME);
		ANNOTATE_CFG_PROG_B2(TX_TIME);
		ANNOTATE_CFG_PROG_B3(TX_TIME);
		ANNOTATE_CFG_CS_B0(TX_TIME);
